<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/clxx_ly_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/setting_wtfk_text"
        >
        
        <LinearLayout
            android:id="@+id/clxx_ly1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/clxx_item_vehicle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号："/>
            <TextView
                android:id="@+id/clxx_item_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GB3-68"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/clxx_v1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_below="@+id/clxx_ly1"
            />


        <LinearLayout
            android:id="@+id/clxx_ly2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clxx_ly1"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/clxx_item_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余天数/工作时间："
                />
        </LinearLayout>

        <TextView
            android:id="@+id/clxx_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25天"
            android:textSize="20sp"
            android:textColor="@color/black_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:layout_below="@+id/clxx_ly2"
            />

        <View
            android:id="@+id/clxx_v2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_below="@+id/clxx_item_time"
            />

        <LinearLayout
            android:id="@+id/clxx_ly3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/clxx_item_time"
            >
            <TextView
                android:id="@+id/clxx_item_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最后位置/所属分组："/>
            <TextView
                android:id="@+id/clxx_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="贵州省贵阳市贵阳市贵阳晶曦贝耐火材料厂东南方向276米左右"
                android:textColor="@color/black_text"
                android:padding="10dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>