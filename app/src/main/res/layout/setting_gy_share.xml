<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zxhl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/setting_ly_share"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/bg_white"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentTop="true"
        >


        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/setting_imgtxt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            zxhl:iconDrawable="@mipmap/cs_ic_back_blue"
            zxhl:iconDrawablePress="@mipmap/cs_ic_back_blue_press"
            zxhl:spacing="10dp"
            zxhl:style="iconLeft"
            zxhl:text="分享"
            zxhl:textSize="18"
            zxhl:textColor="@color/black"
            />

        <Button
            android:id="@+id/setting_btn_more_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/div_white"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/setting_ly_share"
        android:background="@color/black_bg"
        >
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="400dp"
            android:background="@color/bg_white"
            android:layout_centerInParent="true"
            >


            <ImageView
                android:id="@+id/setting_img_share"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_img_share"
                android:text="扫一扫上面的二维码图案，下载程序"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_ly_more_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#11000000"
        android:visibility="gone"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_white"
            >
            <TextView
                android:id="@+id/setting_txt_save_share"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="保存到手机"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="@drawable/sy_setting_layout_pressed"
                />
            <TextView
                android:id="@+id/setting_txt_rest_share"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_below="@+id/setting_txt_save_share"
                android:text="更换样式"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="@drawable/sy_setting_layout_pressed"
                />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>