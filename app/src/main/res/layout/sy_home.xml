<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/sy_home_visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        >

        <ImageView
            android:id="@+id/sy_home_img1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_failtext"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/sy_home_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你还没有绑定默认显示的机号，"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sy_home_img1"
            />
        <TextView
            android:id="@+id/sy_home_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点我设置"
            android:textSize="12sp"
            android:textColor="@color/light_blue_600"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sy_home_txt1"
            />
        <ImageView
            android:id="@+id/sy_home_cancel"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_cancel_toolbar"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/sy_home_shap"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨日工作"
                android:textSize="14sp"
                android:textColor="@color/bg_white"
                />
            <TextView
                android:id="@+id/sy_home_Yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="18sp"
                android:textColor="@color/bg_white"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(时/h)"
                android:textSize="12sp"
                android:textColor="@color/bg_white"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/sy_home_shap2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月累计"
                android:textSize="14sp"
                android:textColor="@color/bg_white"
                />
            <TextView
                android:id="@+id/sy_home_MonthTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="18sp"
                android:textColor="@color/bg_white"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(时/h)"
                android:textSize="12sp"
                android:textColor="@color/bg_white"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/sy_home_shap3"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年累计"
                android:textSize="14sp"
                android:textColor="@color/bg_white"
                />
            <TextView
                android:id="@+id/sy_home_YearTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="18sp"
                android:textColor="@color/bg_white"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(时/h)"
                android:textSize="12sp"
                android:textColor="@color/bg_white"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/bg_gray"
        />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <AutoCompleteTextView
                android:id="@+id/sy_home_VehicleLic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入机号"
                android:textSize="10sp"
                android:background="@null"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:dropDownVerticalOffset="10dp"
                android:dropDownHeight="200dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/sy_home_BeginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_selector"
                android:textSize="10sp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:hint="开始时间"
                android:focusable="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/sy_home_EndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_selector"
                android:textSize="10sp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:hint="结束时间"
                android:focusable="false"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/bg_gray"
        android:layout_marginBottom="5dp"
        />

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/sy_home_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginBottom="15dp"
        />

    <RelativeLayout
        android:id="@+id/home_ly_sche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray_opc"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/home_img_sche"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/anima_sche"
            />

    </RelativeLayout>

</LinearLayout>