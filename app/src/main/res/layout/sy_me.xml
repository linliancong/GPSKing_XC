<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zxhl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_bg"
    >

    <RelativeLayout
        android:id="@+id/me_ly_tx"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sy_setting_layout_pressed"
        android:clickable="true"
        android:focusable="true"
        >

        <ImageView
            android:id="@+id/me_img_tx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/me_img_tx"
            android:paddingLeft="10dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/me_txt_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/me_txt_tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black_overlay"
                android:paddingTop="6dp"
                />

        </LinearLayout>


        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/me_imgtxt_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            zxhl:iconDrawable="@mipmap/cs_arrow_right"
            zxhl:spacing="4dp"
            zxhl:style="iconRight"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_ly_xm"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sy_setting_layout_pressed"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/me_txt_xm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="姓名"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/me_imgtxt_xm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            zxhl:iconDrawable="@mipmap/cs_arrow_right"
            zxhl:style="iconRight"
            zxhl:textSize="12"
            zxhl:textColor="@color/black_overlay"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_ly_zh"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/sy_setting_layout_pressed"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/me_txt_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="账号"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/me_imgtxt_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"

            zxhl:style="iconRight"
            zxhl:textSize="12"
            zxhl:textColor="@color/black_overlay"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_ly_lx"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/sy_setting_layout_pressed"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/me_txt_lx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="类型"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/me_imgtxt_lx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"

            zxhl:style="iconRight"
            zxhl:textSize="12"
            zxhl:textColor="@color/black_overlay"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_ly_fz"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/sy_setting_layout_pressed"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/me_txt_fz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="分组"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/me_imgtxt_fz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"

            zxhl:style="iconRight"
            zxhl:textSize="12"
            zxhl:textColor="@color/black_overlay"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_ly_gd"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sy_setting_layout_pressed"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/me_txt_gd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="更多"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/me_imgtxt_gd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            zxhl:iconDrawable="@mipmap/cs_arrow_right"
            zxhl:spacing="4dp"
            zxhl:style="iconRight"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_ly_sche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray_opc"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/me_img_sche"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/anima_sche"
            />
    </RelativeLayout>

</LinearLayout>