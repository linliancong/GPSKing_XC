<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bytx_ly_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/setting_wtfk_text"
        >
        
        <LinearLayout
            android:id="@+id/bytx_ly1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保养时间："/>
            <TextView
                android:id="@+id/bytx_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017/11/14 15:18:19"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/bytx_v1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_below="@+id/bytx_ly1"
            />

        <LinearLayout
            android:id="@+id/bytx_ly4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bytx_ly1"
            android:padding="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保养小时："/>
            <TextView
                android:id="@+id/bytx_item_configHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50.00H"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/bytx_v4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_below="@+id/bytx_ly4"
            />


        <LinearLayout
            android:id="@+id/bytx_ly2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bytx_ly4"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/bytx_item_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保养时的工作时间："
                />
        </LinearLayout>

        <TextView
            android:id="@+id/bytx_item_facthour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="71.00H"
            android:textSize="20sp"
            android:textColor="@color/black_text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:layout_below="@+id/bytx_ly2"
            />

        <View
            android:id="@+id/bytx_v2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_below="@+id/bytx_item_facthour"
            />

        <LinearLayout
            android:id="@+id/bytx_ly3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/bytx_item_facthour"
            >
            <TextView
                android:id="@+id/bytx_item_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保养项目："/>
            <TextView
                android:id="@+id/bytx_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="机油"
                android:textColor="@color/black_text"
                android:padding="10dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>