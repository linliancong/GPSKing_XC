        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/setting_txt_jcgx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="检查更新"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/setting_imgtxt_jcgx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            zxhl:iconDrawable="@mipmap/cs_arrow_right"
            zxhl:spacing="4dp"
            zxhl:style="iconRight"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_ly_wtfk"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/sy_setting_layout_pressed"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/setting_txt_wtfk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="问题与建议"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/setting_imgtxt_wtfk"
            android:layout_width="wrap_content"
